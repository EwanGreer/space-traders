<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      <h3 class="text-center">Welcome, <%= current_user.username %>!</h3> <!-- Displaying the user's name -->
      <p class="text-muted text-center">Here you can manage your agents and their details.</p>
    </div>
    <div class="card-body">
      <!-- Button to Add New Agent -->
      <div class="text-end mb-3">
        <%= link_to 'Add New Agent', new_agent_path, class: 'btn btn-primary' %>
      </div>

      <!-- Agents Table -->
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Role</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @agents.each do |agent| %> <!-- Looping through each agent -->
            <tr>
              <td><%= agent.name %></td>
              <td><%= agent.role %></td>
              <td><%= agent.status %></td>
              <td>
                <!-- Edit Button and Delete Button -->
                <%= link_to 'Edit', edit_agent_path(agent), class: 'btn btn-sm btn-warning' %>
                <%= link_to 'Delete', agent_path(agent), method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: 'Are you sure you want to delete this agent?' } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
